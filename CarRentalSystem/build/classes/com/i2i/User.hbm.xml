<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
 
 <hibernate-mapping>
    <class name="com.i2i.model.User" table="User">
      <meta attribute="class-description">
         This class contains the user detail. 
      </meta>
      <id name="id" type="int" column="id">
          <generator class="increment"></generator>
      </id>
      <property name="name" column="name" type="string"/>
      <property name="phoneNumber" column="phoneNumber" type="string"/>
      <property name="email" column="email" type="string"/>
      <property name="password" column="password" type="string"/>
      <property name="address" column="address" type="string"/>
      <property name="createdAt" column="createdAt" type="time"/>
      
      <set name="bookings" table="Booking" inverse="true" lazy="false" fetch="select">
          <key>
              <column name="id" not-null="true" />
          </key>
          <one-to-many class="com.i2i.model.Booking" />
      </set>
        
      <set name="roles" table="UserRole" cascade="all" lazy="false">
          <key column="userId" />
              <many-to-many column="roleId"  class="com.i2i.model.Role" />
      </set>
  </class>
 </hibernate-mapping>
